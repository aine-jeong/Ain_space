
interface Loanable{ 
}

class AinLoan implements Loanable{ //## 임시 ##
    
    int loanable_money = 3000; 
    int Interest(int money) {
        return (int)(money/20.0);
    }
}

class Bank{ // ## 추상메소드 사용할줄 모름!!
    int money;
    int property = 2000;
   
    Bank(int money) {
        this.money = money;
    }
    
    void Info(Bank bank) {
        System.out.println(bank.toString()+"은행의 잔액: "+bank.money);
    }   
}

class KHBank extends Bank{
    
    KHBank(int money) {
        super(money);
    }

    @Override
    public String toString() {
        return "KH은행";
    }
    
    @Override
    void Info(Bank bank) {
        System.out.println(bank.toString()+"은행의 잔액: "+bank.money);
    }
}

class YHBank extends Bank implements Loanable{

    int loanable_money = 300; //## 임시 ##
    
    YHBank(int money) {
        super(money);
    }
    
    @Override
    public String toString() {
        return "YH은행";
    }

//    @Override
//    public void property() {
//        // TODO Auto-generated method stub
//        
//    }
}

class JHBank extends Bank implements Loanable{

    int loanable_money = 300; //## 임시 ##
    
    JHBank(int money) {
        super(money);
    }
    
    @Override
    public String toString() {
        return "JH은행";
    }
}

class User{
    int money = 5000;
    
    void bankWithDraw(Bank bank, int money) {
        bank.money -= money;
        this.money += money;
        System.out.println(bank.toString()+"에"+money+"만원 출금하셨습니다.");
        System.out.println(bank.toString()+"의 고객님 잔액: "+bank.money+"\n");
    }
    
    void bankDeposit(Bank bank, int money) {
        bank.money += money;
        this.money -= money;
        System.out.println(bank.toString()+"에"+money+"만원 입금하셨습니다.");
        System.out.println(bank.toString()+"의 고객님 잔액: "+bank.money+"\n");
    }
    
    void loan(Loanable loan, int money) {
        
        if (loan instanceof Bank) {
            Bank bank = (Bank)loan;
            bank.property -= money;
            System.out.println(bank.toString()+"에서"+money+"만원 대출하셨습니다."+"\n");
            System.out.println("고객님, "+bank.toString()+"에서"+bank.property+"만원 더 대출 가능합니다!"+"\n");
            this.money += money;
        } else {
            AinLoan ainloan = (AinLoan)loan;
            ainloan.loanable_money -= money;
            int interest = ainloan.Interest(money);
            System.out.println("Ainloan 고객님 환영합니다 ^^");
            System.out.println(money+"만원 대출신청 승인되셨습니다.");
            System.out.println("이율은 20%로, 고객님의 이자는"+interest+"입니다.");
            this.money += money;
        }
    }
    
    void Info() {
        System.out.println("현재 가지고있는 현금: "+this.money+"만원");
    }
}

public class HW_Diagram {
    public static void main(String[] args) {
        User user = new User();
        KHBank khbank = new KHBank(1000);
        YHBank yhbank = new YHBank(500);
        JHBank jhbank = new JHBank(300);
        
        AinLoan ainloan = new AinLoan();
        
       
        user.bankDeposit(khbank, 300);
        
        user.bankWithDraw(yhbank, 200);
        
        System.out.println("내가 갖고있는 돈: "+user.money);
        
        
        user.loan(jhbank, 500);
        System.out.println("내가 갖고있는 돈: "+user.money);
        
        user.toString();
        
        
        user.loan(ainloan, 700);
        
        user.Info();
    }

}
