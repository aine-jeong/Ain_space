package Bank;

import java.util.ArrayList;
import java.util.Arrays;

public class Bank {
    
    private ArrayList<Account> accounts;
    private int totalAccount;
    
    public Bank() {
        this.totalAccount = 0;
        this.accounts = new ArrayList<Account>();
    }
    
    
//    public Bank(Account[] accounts, int totalAccount) {
