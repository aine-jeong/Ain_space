    public ArrayList<Account> findAccounts(String name) {
        ArrayList<Account> allaccount = new ArrayList<Account>();; // 사용자 한명이 가진 계좌의 목록
        for(int i = 0; i < totalAccount; i++) {
            if(accounts.get(i).getName().equals(name)) {
               allaccount.add(accounts.get(i));
            }
        }
        return allaccount;
    }
    
    public ArrayList<Account> getAccounts() { // 계좌목록을 본다.
        return accounts;
    }
    
    public int getTotalAccount() {
        return totalAccount;
    }
    
    
    
}
