import java.io.File;

public class Hw_Dos {
    static String path = "C:\\Temp\\Testing.txt";
    
    public static void main(String[] args) {
        File f = new File(path);
//        renameDirectory(f);
    }
    
//    System.out.println("사용법: java [실행할 파일명] [경로명]");
//    System.out.println("ex) java Ex10_File_Sublist C:\\Temp");
    
    
//    System.out.println("사용법: java [실행할 파일명] [경로명] [원래이름] [바꿀이름]");
//  System.out.println("ex) java Ex10_File_Sublist C:\\Temp");
    
    static void renameDirectory(File dir, File name, File newName) {
        File[] files = dir.listFiles();
        String exName = name.getName();
        
        for(int i = 0; i < files.length ; i++) {
            if(files[i].getName().equals(exName)) {
                name.renameTo(newName);
            }
        }
        
        System.out.println(name);
    }
}

