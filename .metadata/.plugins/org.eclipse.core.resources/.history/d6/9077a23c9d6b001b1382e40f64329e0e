class Bank{ // ## 추상메소드 사용할줄 모름!!
    int money;
    int property = 2000;
   
    Bank(int money) {
        this.money = money;
    }
    
    static void findAccount(String custld) { // ## 해결 못함!
        System.out.println("**금융개정법안 00이후 고객의 휴면계좌 찾아주기 운동**");
        System.out.println("**금융 결제원에서 제공하는 로직**");
    }
    
    void BCAuth(String bankName) {
        System.out.println(bankName+"에서 블록체인 인증을 요청합니다");
        System.out.println("전 금융사 공통 블록체인 로직 수행");
    }
    
    void Info(Bank bank) {
        System.out.println(bank.toString()+"은행의 잔액: "+bank.money);
    }
    
}

class KHBank extends Bank{
    
    KHBank(int money) {
        super(money);
    }

    @Override
    public String toString() {
        return "KH은행";
    }
    
    
    void findAccount(String custld) { // 근데 이걸 아무것도 손대질 않았는데 굳이 써야되는 이유는 ..?
        System.out.println("**금융개정법안 00이후 고객의 휴면계좌 찾아주기 운동**");
        System.out.println("**금융 결제원에서 제공하는 로직**");
    }
    
    @Override
    static void BCAuth(String bankName) {
        System.out.println(bankName+"에서 블록체인 인증을 요청합니다");
        System.out.println("전 금융사 공통 블록체인 로직 수행");
    }
     
}

class YHBank extends Bank implements Loanable{

    int loanable_money = 300; //## 임시 ##
    
    YHBank(int money) {
        super(money);
    }
    
    @Override
    public String toString() {
        return "YH은행";
    }

//    @Override
//    public void property() {
//        // TODO Auto-generated method stub
