package Bank;

import java.util.ArrayList;
import java.util.Arrays;

public class Bank {
    
    private ArrayList<Account> accounts;
    private int totalAccount;
    
    public Bank() {
        this.totalAccount = 0;
        this.accounts = new ArrayList<Account>();
    }
    
    
//    public Bank(Account[] accounts, int totalAccount) {
//        super();
//        this.accounts = accounts;
//        this.totalAccount = totalAccount;
//    }


//    public void setAccounts(Account[] accounts) {
//        this.accounts = accounts;
//    }


    public void setTotalAccount(int totalAccount) {
        this.totalAccount = totalAccount;
    }

    @Override
    public String toString() {
        return "Bank [accounts=" + accounts + ", totalAccount=" + totalAccount + "]";
    }
    
    //-----------------------------------
    
   


    public void addAcount(String accountNo, String name) {
        accounts.add(new Account(accountNo, name));
        totalAccount++;
    }
    
    public Account getAccount(String accountNo) {
        int accountNum = -1;
        for(int i = 0; i < totalAccount; i++) {
            if(accounts.get(i).getAccountNo().equals(accountNo)) {
                accountNum = i; 
            }
        }
        return accounts.get(accountNum);
    }
    
    public Account[] findAccounts(String name) {
        int accountNum = -1;
        int accountNumber = 0; // 사용자 한명이 가진 계좌의 개수
        Account[] allaccount;
        int a =0 ;
        for(int i = 0; i < totalAccount; i++) {
            if(accounts.get(i).getName().equals(name)) {
                accountNumber++;
            }
        }
        
        allaccount = new Account[accountNumber];
        
        for(int i = 0; i < totalAccount; i++) {
            if(accounts.get(i).getName().equals(name)) {
               allaccount[a] = accounts.get(i);
               a++;
            }
        }
        return allaccount;
    }
    
    public ArrayList<Account> getAccounts() {
        return accounts;
    }
    
    public int getTotalAccount() {
        return totalAccount;
    }
    
    
    
}
