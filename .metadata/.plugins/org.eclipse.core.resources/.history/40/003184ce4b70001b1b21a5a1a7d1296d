        Date date = new Date();
        SimpleDateFormat format = new SimpleDateFormat("yyyy.MM.dd");
        String transactionDate = format.format(date);
    
    
    }
    
    public void withdraw(long amount) {
        
    }
    
    public long getBalance() {
        return balance;
    }
    
    public Transaction[] getTransaction() {
        return transaction;
    }
    
}
