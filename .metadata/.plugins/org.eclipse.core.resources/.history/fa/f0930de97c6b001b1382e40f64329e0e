class Bank{
    int money;
    int property = 2000;
   
    Bank(int money) {
        this.money = money;
    }
    
    void withDraw(int money) {
        this.money -= money;
    }
    
    void deposit(int money) {
        this.money += money;
    }
}

class KHBank extends Bank{
    
    KHBank(int money) {
        super(money);
    }
}

class YHBank extends Bank implements Loanable{

    int loanable_money = 300; //## 임시 ##
    
    YHBank(int money) {
        super(money);
    }
}

class JHBank extends Bank implements Loanable{

    int loanable_money = 300; //## 임시 ##
    
    JHBank(int money) {
        super(money);
    }
}

class User{
    int money = 5000;
    
    void bankWithDraw(Bank bank, int money) {
        bank.money -= money;
        this.money += money;
    }
    
    void bankDeposit(Bank bank, int money) {
        bank.money += money;
        this.money -= money;
    }
    
    void loan(Loanable loan, int money) {
        Bank bank = (Bank)loan;
    }
}

public class HW_Diagram {
    public static void main(String[] args) {
        User user = new User();
        KHBank khbank = new KHBank(1000);
        YHBank yhbank = new YHBank(500);
        JHBank jhbank = new JHBank(300);
        AinLoan ainloan = new AinLoan();
        
        
        System.out.println("kh은행에 300 입금해야징");
        user.bankDeposit(khbank, 300);
        
        System.out.println("yh은행에서 200 출금해야징");
        user.bankWithDraw(yhbank, 200);
        
        System.out.println("khbank 잔고: "+khbank.money);
        System.out.println("yhbank 잔고: "+yhbank.money);
        System.out.println("내가 갖고있는 돈: "+user.money);
    }

}
