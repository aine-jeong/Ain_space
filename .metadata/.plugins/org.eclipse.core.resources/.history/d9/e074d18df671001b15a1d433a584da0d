import java.io.File;

public class Hw_Dos {
//    static String path = "C:\\Temp\\Testing.txt";
    static boolean success;
    static String ex_file_name;
    static String new_file_name;
    
    public static void main(String[] args) {
        
        if(args.length != 2) {
            System.out.println("사용법: java [실행할 파일명] [경로\\파일이름] [경로\\바꿀이름]");
            System.out.println("ex) java Ex10_File_Sublist C:\\Temp\\Testing.txt C:\\Temp\\newName.txt");
            System.exit(0);
        }
        ex_file_name = args[0];
        new_file_name = args[1];
        
        File exName = new File(ex_file_name);
        File newName = new File(new_file_name);
        
        if(!exName.exists() || !newName.exists()) { // 존재하지 않다면,
            System.out.println("유효하지 않은 파일입니다.");
            System.exit(0);
        }
        
        renameDirectory(exName);
        
        if (!success) {
            System.out.println("잘못 입력하셨습니다.");
            System.exit(0);
        } else {
            System.out.println("기존 파일 명: " + exName.getName());
            System.out.println("변경된 파일 명: " + newName.getName());
        }
    }
    
    static boolean renameDirectory(File name) {
//        File[] files = dir.listFiles();
//        String exName = name.getName();
//        
//        for(int i = 0; i < files.length ; i++) {
//            if(files[i].getName().equals(exName)) {
//                name.renameTo(newName);
//            }
//        }
        
        success = name.renameTo(new File(new_file_name));
        return success;
//        System.out.println(name);
    }
}

